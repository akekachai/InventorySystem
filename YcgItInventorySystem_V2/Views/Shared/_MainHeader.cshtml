<nav class="main-header navbar navbar-expand navbar-dark navbar-info">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        
    </ul>
    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">

        <!-- Notifications Dropdown Menu -->
        <li class="nav-item dropdown">

            <a class="nav-link" data-toggle="dropdown" href="#">
                <i class="far fa-user"></i> @profile.EmployeeNameFirst @profile.EmployeeNameLast
            </a>
            <div class="dropdown-menu dropdown-menu-lg">
                <div class="dropdown-divider"> </div>
                <form method="post" asp-controller="Profile" asp-action="logout">

                    <button class="btn-sm btn-primary" style="width:100%"><span class="glyphicon glyphicon-log-out"></span> Sign out</button>


                </form>

            </div>
        </li>


    </ul>
</nav>